<%- include('layout/header') %>

    <div class="container">
        <div class="row my-4">
            <div class="col-lg-12">


                <% if (message) { %>
                    <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
                        <div class="d-flex justify-content-center align-items-center">
                            <strong>
                                <%= message.message %>
                            </strong>
                            <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    </div>
                    <% } %>

                        <div class="table-responsive">

                            <style>
                                table {
                                    table-layout: fixed;
                                    width: 100%;
                                }

                                th:nth-child(1),
                                td:nth-child(1) {
                                    width: 7%;
                                    word-wrap: break-word;
                                }

                                th:nth-child(2),
                                td:nth-child(2) {
                                    width: 20%;
                                    word-wrap: break-word;
                                }

                                th:nth-child(3),
                                td:nth-child(3) {
                                    width: 58%;
                                    word-wrap: break-word;
                                }

                                th:nth-child(4),
                                td:nth-child(4) {
                                    width: 15%;
                                    word-wrap: break-word;
                                }
                            </style>
                            <% if (pages!='' ) { %>
                                <table class="table table-striped table-hover text-center my-3">
                                    <thead>
                                        <tr class="table-dark">
                                            <th>ID</th>
                                            <th>Title</th>
                                            <th>Description</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% pages.forEach((row,index)=> { %>
                                            <tr class="align-middle">
                                                <td>
                                                    <%=index %>
                                                </td>
                                                <td>
                                                    <%= row.title %>
                                                </td>
                                                <td>
                                                    <%= row.description %>
                                                </td>
                                                <td>
                                                    <a href="/post/create/edit/<%= row._id %>" class="text-success"><i
                                                            class="fas fa-edit fa-lg mx-1"></i></a>
                                                    <a href="/post/create/delete/<%= row._id %>" class="text-danger"><i
                                                            class="fas fa-trash fa-lg mx-1"></i></a>
                                                </td>
                                            </tr>
                                            <% }) %>
                                    </tbody>
                                </table>
                                <% }else{ %>
                                    <h1 class="text-center text-secondary mt-5">No Posts Found</h1>
                                    <% } %>




                        </div>
            </div>
        </div>
    </div>

    <%- include('layout/footer') %>